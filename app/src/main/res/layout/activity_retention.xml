<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.fat.bigfarm.ui.activity.RetentionActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="47dp">

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#F3D05A"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/rl_login"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentTop="true"
            android:background="#F3D05A">

            <Button
                android:id="@+id/bt_back"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="#00000000"/>

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="9dp"
                android:layout_height="16dp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/return_black"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="收益自留"
                android:textSize="15sp"
                android:textColor="#181818"/>

        </RelativeLayout>
        
        <LinearLayout
            android:layout_below="@+id/rl_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginTop="15dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_count1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:text="15"/>
                <TextView
                    android:id="@+id/tv_unit1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:textSize="14sp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3dp"
                    android:textSize="14sp"
                    android:text="鸡蛋"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/ll2"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_count2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:text="15"/>
                    <TextView
                        android:id="@+id/tv_unit2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15"
                        android:textSize="14sp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3dp"
                    android:textSize="14sp"
                    android:text="鸡蛋"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/ll3"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_count3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:text="15"/>
                    <TextView
                        android:id="@+id/tv_unit3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15"
                        android:textSize="14sp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_name3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3dp"
                    android:textSize="14sp"
                    android:text="鸡蛋"/>

            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_address"
        android:layout_below="@+id/rl_head"
        android:layout_marginTop="28dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"
        android:textColor="#2A2A2A"

        android:text="收货地址"/>

    <RelativeLayout
        android:id="@+id/shippinginfor"
        android:layout_below="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="孔乙己"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="92dp"
            android:layout_marginTop="10dp"
            android:text="110"
            android:textSize="14sp"
            />

        <Button
            android:id="@+id/bt"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/bt_address_sureorder"
            android:textSize="12sp"
            android:textColor="#3B97CF"
            android:text="默认"/>

        <TextView
            android:id="@+id/tv_address"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_phone"
            android:layout_marginLeft="92dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            android:layout_marginTop="6dp"
            android:text="110"
            android:textSize="14sp"
            />

        <ImageView
            android:id="@+id/iv4"
            android:layout_width="9dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="14dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/common_icon_enter"/>

    </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_goodsinfor"
        android:focusable="true"
        android:layout_below="@+id/rl_head"
        android:layout_marginTop="28dp"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            android:textColor="#2A2A2A"

            android:text="新建信息"/>


        <EditText
            android:id="@+id/tv_newname"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/tv1"
            android:layout_marginLeft="20dp"
            android:hint="姓名"
            android:textColorHint="#737373"
            android:textSize="14sp"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:layout_marginRight="15dp"
            android:maxLength="11"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_newname"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#dadada"/>


        <EditText
            android:id="@+id/tv_newphone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/tv_newname"
            android:layout_marginLeft="20dp"
            android:hint="手机号码"
            android:textSize="14sp"
            android:textColorHint="#737373"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:layout_marginRight="15dp"
            android:numeric="integer"
            android:maxLength="11"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_newphone"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#dadada"/>


        <TextView
            android:id="@+id/tv_area"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:layout_below="@+id/tv_newphone"
            android:layout_marginLeft="20dp"
            android:hint="所在地区"
            android:textColorHint="#737373"
            android:textSize="14sp"
            android:textColor="#181818"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:layout_marginRight="15dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_area"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#dadada"/>


        <EditText
            android:id="@+id/tv_newaddress"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/tv_area"
            android:hint="详细地址：街道、楼牌号等"
            android:textSize="14sp"
            android:textColorHint="#737373"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:layout_marginRight="15dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_newaddress"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#dadada"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_shopname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"
        android:textColor="#2A2A2A"

        android:text="农场"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        >


        <ImageView
            android:id="@+id/iv_thumb"
            android:layout_below="@+id/tv_tab_title"
            android:layout_marginTop="5dp"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tv_earningstitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_thumb"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textColor="#222222"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_meal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_thumb"
            android:layout_below="@+id/tv_earningstitle"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textColor="#A0A0A0"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_thumb"
            android:layout_alignBottom="@+id/iv_thumb"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textColor="#DE413D"
            android:textSize="13sp" />


    </RelativeLayout>

    </LinearLayout>
    
    <Button
        android:id="@+id/bt_sure"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:background="#F3D05A"
        android:text="确认自留"/>

</RelativeLayout>

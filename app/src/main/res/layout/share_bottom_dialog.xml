<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="fill_parent"
        android:layout_height="230dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:text="分享到"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:id="@+id/textView" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/ll_share"
            android:background="#ffffff"/>

        <ImageView
            android:id="@+id/share_pop_cancle_iv"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/back_white"
            android:layout_below="@+id/view"
            android:layout_marginTop="10dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/share_pop_cancle_btn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/ll_share"
            android:background="@null"
            android:text=""
            android:textSize="14sp"
            android:textColor="#ffffff"/>

        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="fill_parent"
            android:layout_height="130dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:id="@+id/share_weixin_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/share_weixin_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/common_icon_wechat"
                    android:contentDescription="@string/app_name"
                    android:padding="5dp" />

                <TextView
                    android:layout_below="@+id/share_weixin_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:text="微信好友"
                    android:textSize="14sp"
                    android:textColor="#ffffff"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/share_weixinfriend_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/share_weixinfriend_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/common_icon_pengyouquan"
                    android:contentDescription="@string/app_name"
                    android:padding="5dp" />

                <TextView
                    android:layout_below="@+id/share_weixinfriend_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:text="微信朋友圈"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/share_weibo_rl"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/share_to_weibo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/common_icon_weibo"
                    android:contentDescription="@string/app_name"
                    android:padding="5dp" />

                <TextView
                    android:layout_below="@+id/share_to_weibo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:text="微博"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/share_to_qq_zone_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/share_to_qq_zone_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/common_icon_kongjian"
                    android:contentDescription="@string/app_name"
                    android:padding="5dp" />

                <TextView
                    android:layout_below="@+id/share_to_qq_zone_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:text="QQ空间"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>